<div class="note-preview-container">

<div class="note-preview-box">
 <%= form_for @note do |f| %>
    <div class="stat-card-custom">
      <h1><%= @note.date.to_formatted_s(:long) %></h1>
      <%= f.date_field :date, class: "note-preview-box-style" %>
    </div>
      <h2><%= f.text_field :title, class: "note-preview-box-style" %></h2>
    <div class="stat-card-body">
    <p>
      <h3><%= f.text_field :instructor, class: "note-preview-box-style" %></h3>
    </p>
    <p class="note-show-text">
      <%= f.text_area :description, class: "description-field note-preview-box-style" %>
    </p>
  </div>
  <div class="mt-2">
      <%= f.submit "Save changes", class: "w-25 btn btn-primary btn-lg" %>
    </div>
    </div>
    </div>

    <% end %>