<div class="note-show-container">
  <div class="note-edit-box">
    <%= render "shared/errornotes" %>
    <div class="note-preview-container">

      <div class="note-preview-box">
        <%= form_for @note do |f| %>
        <div class="stat-card-custom">
          <%= f.date_field :date, class: "note-preview-box-style" %>
        </div>
        <h2><%= f.text_field :title, placeholder: "Class Title", class: "note-preview-box-style" %></h2>
        <div class="stat-card-body">
          <p>
            <h3><%= f.text_field :tag_list, placeholder: "tags", class: "note-preview-box-style" %></h3>
          </p>
          <p>
            <h3><%= f.text_field :instructor, placeholder: "Instructor", class: "note-preview-box-style" %></h3>
          </p>
          <p class="note-show-text">
            <%= f.text_area :description, placeholder: "Description", class: "description-field note-preview-box-style" %>
          </p>
        </div>
        <% if @note.previous %>
        <%= link_to "< Previous", @note.previous %>
<% end %>
        <% if @note.next %>
        <%= link_to "Next >", @note.next %>
        <% end %>

        <div class="mt-2">
          <%= f.submit "Save changes", class: "w-25 btn btn-primary btn-lg" %>
        </div>
      </div>
    </div>

    <% end %>
