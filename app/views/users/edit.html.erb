<div class="sign-in-wrapper">
  <div class="sign-up-box">
    <h2>Edit your details</h2>

    <%= form_for(resource, as: resource_name, url: edit_user_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="field form-input">
      <% f.label :name %><br />
      <%= f.text_field :name, autofocus: true, placeholder: "Name", autocomplete: "name", class: "form-control form-control-lg" %>
    </div>

    <div class="field form-input">
      <% f.label :email %><br />
      <%= f.email_field :email, autocomplete: "email", placeholder: "Email", class: "form-control form-control-lg" %>
    </div>

    <div class="field form-input training-since-custom">
      <%= f.label :training_since %>
      <%= f.date_field :training_since %>
    </div>

    <div class="field form-input">
      <% f.label :belt %><br />
      <%= f.text_field :belt, autocomplete: "belt", placeholder: "Belt", class: "form-control form-control-lg" %>
    </div>

    <div class="field form-input">
      <% f.label :password %><br />
      <%= f.password_field :password, autocomplete: "new-password", placeholder: "Please choose a password", class: "form-control form-control-lg" %>
    </div>

    <div class="field form-input">
      <% f.label :password_confirmation %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control form-control-lg", placeholder: "Please confirm your password" %>
    </div>

    <div class="sign-up-bottom-buttons">
      <div class="mt-2">
        <%= f.submit "Sign up", class: "w-25 btn btn-primary btn-lg" %>
      </div>
      <div class="mt-2">
        <%= link_to 'Log In', new_user_session_path, class: "w-25 btn btn-primary btn-lg" %>
      </div>
      <p class="mt-5 mb-3 text-muted">Â© 2021</p>
    </div>
    <% end %>

  </div>
</div>